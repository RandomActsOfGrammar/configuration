
general {
        output_format = "i3bar"
        colors = true
        interval = 10
}

order += "ethernet _first_"
order += "volume master"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"

ethernet _first_ {
         format_up = " E: %ip (%speed) "
         format_down = " E: down "
}

volume master {
       format = " Vol:  %volume  "
       format_muted = " Vol: (%volume) "
       device = "pulse"
       mixer = "Master"
       mixer_idx = 0
}

wireless _first_ {
         format_up = " W: (%quality at %essid) %ip "
         format_down = " W: down "
}

battery 0 {
        format = " %status %percentage %remaining "
        format_down = " No battery "
        status_chr = "Chr "
        status_bat = "Bat "
        status_unk = "?Unk"
        status_full = "Full"
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "percentage"
        low_threshold = 10
}

tztime local {
       format = " %Y-%m-%d %H:%M:%S "
}
